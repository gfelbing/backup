echo "Create mountpoint '$MOUNTPOINT' if not exists"
sudo mkdir -p $MOUNTPOINT
echo "Opening encrypted filesystem."
echo -e `gpg2 -r $GPGUID -d ~/.config/backup/pass 2> /dev/null` | sudo cryptsetup luksOpen /dev/$VGNAME/$LVNAME $LUKSNAME

echo "Mounting $LUKSNAME to $MOUNTPOINT"
sudo mount -t btrfs /dev/mapper/$LUKSNAME $MOUNTPOINT
